<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hwang_gyojun.hyu_se.ResultFragment"
    android:padding="16dp"
   >

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:gravity="left|center_vertical"
                android:layout_alignParentLeft="true"
                android:id="@+id/product" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:id="@+id/button_preference" />
        </RelativeLayout>
        <TextView
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#888888"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#ffffff"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/wholesale"
                android:background="@drawable/button_normal"
                android:paddingLeft="16dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wholesale_name"
                    android:text="도매가"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wholesale_price"
                    android:text=""
                    android:textSize="16pt"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단위:"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wholesale_unit"
                    android:text=""
                    android:textSize="12pt"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/retail"
                android:background="@drawable/button_normal"
                android:paddingLeft="16dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/retail_name"
                    android:text="소매가"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/retail_price"
                    android:text=""
                    android:textSize="16pt"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단위:"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/retail_unit"
                    android:text=""
                    android:textSize="12pt"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:gravity="right"
                android:id="@+id/price_name"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:gravity="left"
                android:id="@+id/current_price"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#888888"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:visibility="gone"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="도매"
                android:textColor="#ffffff"
                android:background="@drawable/button1"
                android:visibility="gone"
                android:id="@+id/button_wholesale" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="소매"
                android:visibility="gone"
                android:id="@+id/button_retail"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_do"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_si"
                android:layout_weight="1" />

        </LinearLayout>






        <com.github.mikephil.charting.charts.LineChart
            android:background="#ffffff"
            android:id="@+id/chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
    <!-- Kyojun Hwang end -->
